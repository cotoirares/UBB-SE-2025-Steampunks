<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Steampunks.Views.TradingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Steampunks.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Trading" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <TabView Grid.Row="1">
            <TabView.TabItems>
                <TabViewItem Header="Create Offer">
                    <Grid Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- User Selection -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Header="Current User" 
                                    x:Name="UserComboBox"
                                    Width="300"
                                    SelectionChanged="UserComboBox_SelectionChanged"
                                    HorizontalAlignment="Left"/>

                            <ComboBox Header="Trade With" 
                                    x:Name="RecipientComboBox"
                                    Grid.Column="2"
                                    Width="300"
                                    SelectionChanged="RecipientComboBox_SelectionChanged"
                                    HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- Game Selection and Trade Info -->
                        <StackPanel Grid.Row="1" Spacing="10" Margin="0,0,0,20">
                            <TextBlock Text="Create New Trade Offer" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ComboBox x:Name="GameComboBox" 
                                    PlaceholderText="Select Game (Optional - filters items)" 
                                    Width="300"
                                    SelectionChanged="GameComboBox_SelectionChanged"/>
                            <TextBox x:Name="DescriptionTextBox" 
                                   PlaceholderText="Trade Description" 
                                   Width="300" 
                                   Height="60" 
                                   TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Items Selection -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Your Items -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Your Inventory" 
                                         Style="{StaticResource SubtitleTextBlockStyle}"/>

                                <ListView x:Name="SourceItemsListView"
                                        Grid.Row="1"
                                        SelectionMode="Multiple"
                                        Margin="0,10"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Source="{Binding ImagePath}" 
                                                     Width="50" Height="50" 
                                                     Margin="0,0,10,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ItemName}" 
                                                             Style="{StaticResource BodyTextBlockStyle}"/>
                                                    <TextBlock Text="{Binding PriceDisplay}" 
                                                             Style="{StaticResource CaptionTextBlockStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <TextBlock Text="Your Selected Items" 
                                         Style="{StaticResource SubtitleTextBlockStyle}"
                                         Grid.Row="2"
                                         Margin="0,10,0,0"/>

                                <ListView x:Name="SelectedSourceItemsListView"
                                        Grid.Row="3"
                                        Margin="0,10"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource SystemFillColorSuccessBrush}"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Source="{Binding ImagePath}" 
                                                     Width="50" Height="50" 
                                                     Margin="0,0,10,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ItemName}" 
                                                             Style="{StaticResource BodyTextBlockStyle}"/>
                                                    <TextBlock Text="{Binding PriceDisplay}" 
                                                             Style="{StaticResource CaptionTextBlockStyle}"/>
                                                </StackPanel>
                                                <Button Grid.Column="2"
                                                        Content="Remove"
                                                        Click="RemoveSourceItem_Click"
                                                        Tag="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>

                            <!-- Middle Controls -->
                            <StackPanel Grid.Column="1" 
                                      VerticalAlignment="Center" 
                                      Margin="20,0">
                                <Button Content="Add &#x3E;" 
                                        Click="AddSourceItem_Click"
                                        Margin="0,0,0,10"/>
                                <Button Content="&#x3C; Add" 
                                        Click="AddDestinationItem_Click"/>
                            </StackPanel>

                            <!-- Their Items -->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Their Inventory" 
                                         Style="{StaticResource SubtitleTextBlockStyle}"/>

                                <ListView x:Name="DestinationItemsListView"
                                        Grid.Row="1"
                                        SelectionMode="Multiple"
                                        Margin="0,10"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Source="{Binding ImagePath}" 
                                                     Width="50" Height="50" 
                                                     Margin="0,0,10,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ItemName}" 
                                                             Style="{StaticResource BodyTextBlockStyle}"/>
                                                    <TextBlock Text="{Binding PriceDisplay}" 
                                                             Style="{StaticResource CaptionTextBlockStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <TextBlock Text="Their Selected Items" 
                                         Style="{StaticResource SubtitleTextBlockStyle}"
                                         Grid.Row="2"
                                         Margin="0,10,0,0"/>

                                <ListView x:Name="SelectedDestinationItemsListView"
                                        Grid.Row="3"
                                        Margin="0,10"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource SystemFillColorSuccessBrush}"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Image Source="{Binding ImagePath}" 
                                                     Width="50" Height="50" 
                                                     Margin="0,0,10,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ItemName}" 
                                                             Style="{StaticResource BodyTextBlockStyle}"/>
                                                    <TextBlock Text="{Binding PriceDisplay}" 
                                                             Style="{StaticResource CaptionTextBlockStyle}"/>
                                                </StackPanel>
                                                <Button Grid.Column="2"
                                                        Content="Remove"
                                                        Click="RemoveDestinationItem_Click"
                                                        Tag="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Grid>

                        <!-- Footer -->
                        <Grid Grid.Row="3" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="ErrorMessage" 
                                     Foreground="Red" 
                                     TextWrapping="Wrap"/>
                            <TextBlock x:Name="SuccessMessage" 
                                     Foreground="Green" 
                                     TextWrapping="Wrap"/>

                            <Button Content="Create Trade Offer" 
                                    Grid.Column="1"
                                    Style="{StaticResource AccentButtonStyle}" 
                                    Click="CreateTradeOffer_Click"/>
                        </Grid>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Active Trades">
                    <Grid Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Active Trade Offers" 
                                 Style="{StaticResource SubtitleTextBlockStyle}"
                                 Margin="0,0,0,20"/>

                        <ListView x:Name="ActiveTradesListView" 
                                Grid.Row="1"
                                SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" 
                                          ColumnSpacing="20" 
                                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                          BorderThickness="1"
                                          CornerRadius="8"
                                          Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Width="200">
                                            <TextBlock Text="Trade Partner" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                            <TextBlock Text="{Binding PartnerName}" 
                                                     Style="{StaticResource BodyTextBlockStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Items" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                            <ItemsRepeater ItemsSource="{Binding TradeItems}">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding ItemName}"
                                                                 Style="{StaticResource BodyTextBlockStyle}"/>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>
                                            <TextBlock Text="{Binding TradeDescription}"
                                                     Style="{StaticResource BodyTextBlockStyle}"
                                                     Opacity="0.8"
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" 
                                                  Orientation="Horizontal" 
                                                  Spacing="8">
                                            <Button Content="Accept"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    Click="AcceptTrade_Click"/>
                                            <Button Content="Decline"
                                                    Click="DeclineTrade_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Trade History">
                    <Grid Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Trade History" 
                                 Style="{StaticResource SubtitleTextBlockStyle}"
                                 Margin="0,0,0,20"/>

                        <ListView x:Name="TradeHistoryListView" 
                                Grid.Row="1"
                                SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" 
                                          ColumnSpacing="20" 
                                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                          BorderThickness="1"
                                          CornerRadius="8"
                                          Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Width="200">
                                            <TextBlock Text="Trade Partner" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                            <TextBlock Text="{Binding PartnerName}" 
                                                     Style="{StaticResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding TradeDate}" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Items" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                            <ItemsRepeater ItemsSource="{Binding TradeItems}">
                                                <ItemsRepeater.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding ItemName}"
                                                                 Style="{StaticResource BodyTextBlockStyle}"/>
                                                    </DataTemplate>
                                                </ItemsRepeater.ItemTemplate>
                                            </ItemsRepeater>
                                            <TextBlock Text="{Binding TradeDescription}"
                                                     Style="{StaticResource BodyTextBlockStyle}"
                                                     Opacity="0.8"
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" 
                                                  VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TradeStatus}"
                                                     Style="{StaticResource BodyStrongTextBlockStyle}"
                                                     Foreground="{Binding StatusColor}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page> 