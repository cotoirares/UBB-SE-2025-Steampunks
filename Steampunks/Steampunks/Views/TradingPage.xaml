<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Steampunks.Views.TradingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Steampunks.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Trading" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <TabView Grid.Row="1">
            <TabView.TabItems>
                <TabViewItem Header="Create Offer">
                    <Grid Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Spacing="10">
                            <TextBlock Text="Create New Trade Offer" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <ComboBox x:Name="GameComboBox" PlaceholderText="Select Game" Width="300"/>
                            <TextBox x:Name="RecipientTextBox" PlaceholderText="Recipient Username" Width="300"/>
                            <TextBox x:Name="DescriptionTextBox" PlaceholderText="Trade Description" Width="300" Height="100" TextWrapping="Wrap"/>
                            <TextBlock x:Name="ErrorMessage" Foreground="Red" TextWrapping="Wrap"/>
                            <TextBlock x:Name="SuccessMessage" Foreground="Green" TextWrapping="Wrap"/>
                            <Button Content="Create Game Offer" Style="{StaticResource AccentButtonStyle}" Click="CreateGameOffer_Click"/>
                        </StackPanel>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Active Trades">
                    <Grid Padding="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Active Trade Offers" 
                                 Style="{StaticResource SubtitleTextBlockStyle}"
                                 Margin="0,0,0,20"/>

                        <ListView x:Name="ActiveTradesListView" 
                                Grid.Row="1"
                                SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" 
                                          ColumnSpacing="20" 
                                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                          BorderThickness="1"
                                          CornerRadius="8"
                                          Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Width="200">
                                            <TextBlock Text="Trade Partner" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                            <TextBlock Text="{Binding PartnerName}" 
                                                     Style="{StaticResource BodyTextBlockStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="Game" 
                                                     Style="{StaticResource CaptionTextBlockStyle}"
                                                     Opacity="0.6"/>
                                            <TextBlock Text="{Binding GameTitle}" 
                                                     Style="{StaticResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding TradeDescription}"
                                                     Style="{StaticResource BodyTextBlockStyle}"
                                                     Opacity="0.8"
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" 
                                                  Orientation="Horizontal" 
                                                  Spacing="8">
                                            <Button Content="Accept"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    Click="AcceptTrade_Click"/>
                                            <Button Content="Decline"
                                                    Click="DeclineTrade_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabViewItem>

                <TabViewItem Header="Trade History">
                    <ListView>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <PersonPicture Grid.Column="0" 
                                                 DisplayName="{Binding PartnerName}"
                                                 Width="40" Height="40"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding PartnerName}" 
                                                 Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Text="{Binding Status}"
                                                 Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                             Text="{Binding CompletedDate}"
                                             Style="{StaticResource CaptionTextBlockStyle}"
                                             VerticalAlignment="Center"/>

                                    <Button Grid.Column="3" 
                                            Content="View"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page> 