<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Steampunks.Views.TradingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Steampunks.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Trading" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <TabView Grid.Row="1">
            <TabView.TabItems>
                <TabViewItem Header="Active Trades">
                    <ListView>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <PersonPicture Grid.Column="0" 
                                                 DisplayName="{Binding PartnerName}"
                                                 Width="40" Height="40"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding PartnerName}" 
                                                 Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Text="{Binding Status}"
                                                 Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                             Text="{Binding CreatedDate}"
                                             Style="{StaticResource CaptionTextBlockStyle}"
                                             VerticalAlignment="Center"/>

                                    <Button Grid.Column="3" 
                                            Content="View"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabViewItem>

                <TabViewItem Header="Trade History">
                    <ListView>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <PersonPicture Grid.Column="0" 
                                                 DisplayName="{Binding PartnerName}"
                                                 Width="40" Height="40"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding PartnerName}" 
                                                 Style="{StaticResource BodyTextBlockStyle}"/>
                                        <TextBlock Text="{Binding Status}"
                                                 Style="{StaticResource CaptionTextBlockStyle}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                             Text="{Binding CompletedDate}"
                                             Style="{StaticResource CaptionTextBlockStyle}"
                                             VerticalAlignment="Center"/>

                                    <Button Grid.Column="3" 
                                            Content="Details"
                                            Style="{StaticResource DefaultButtonStyle}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page> 