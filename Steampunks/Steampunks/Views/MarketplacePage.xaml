<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Steampunks.Views.MarketplacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Steampunks.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:PriceConverter x:Key="PriceConverter"/>
        <local:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Skin Marketplace" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Spacing="10"
                    Margin="0,0,0,20">
            <ComboBox PlaceholderText="Game" 
                      Width="200"
                      ItemsSource="{Binding AvailableGames}"
                      SelectedItem="{Binding SelectedGame, Mode=TwoWay}"/>
            <ComboBox PlaceholderText="Type" 
                      Width="200"
                      ItemsSource="{Binding AvailableTypes}"
                      SelectedItem="{Binding SelectedType, Mode=TwoWay}"/>
            <ComboBox PlaceholderText="Rarity" 
                      Width="200"
                      ItemsSource="{Binding AvailableRarities}"
                      SelectedItem="{Binding SelectedRarity, Mode=TwoWay}"/>
            <TextBox PlaceholderText="Search skins..." 
                     Width="300"
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <GridView Grid.Row="2"
                  ItemsSource="{Binding Items}"
                  SelectionMode="Single">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="200" Height="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="4">
                            <Image Source="{Binding ImagePath}"
                                   Stretch="UniformToFill"
                                   Width="200"
                                   Height="150"/>
                        </Border>
                        
                        <StackPanel Grid.Row="1" Margin="5">
                            <TextBlock Text="{Binding ItemName}" 
                                     Style="{StaticResource BodyTextBlockStyle}"
                                     TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Game.Title}" 
                                     Style="{StaticResource CaptionTextBlockStyle}"
                                     Foreground="Gray"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" 
                                  Orientation="Horizontal" 
                                  Margin="5"
                                  Spacing="5">
                            <TextBlock Text="{Binding Price, Converter={StaticResource PriceConverter}}" 
                                     Style="{StaticResource CaptionTextBlockStyle}"/>
                            <TextBlock Text="{Binding IsListed, Converter={StaticResource BooleanToStatusConverter}}"
                                     Style="{StaticResource CaptionTextBlockStyle}"
                                     Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>